<!DOCTYPE html>
<html>
<head>
  <title>Gcamp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
</head>
<body>

  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <%= link_to "Gcamp", root_path, class: "navbar-brand" %>
      </div>
    </div>
  </nav>


  <%= yield %>

  <div class="container">
    <div class="row">
      <div class="welcome footer">
        <div class="col-md-6" style="border-top: 1px solid lightgrey;padding: 10px 0px;margin-top: 20px;">
          <%= link_to "Terms", terms_path() %> |
          <%= link_to "About", about_path() %> |
          <%= link_to "FAQ",  faq_path() %> |
          <%= link_to "Tasks",  tasks_path() %>
        </div>


        <div class="col-md-6 text-right" style="border-top: 1px solid lightgrey;padding: 10px 0px;margin-top: 20px;">
          <%= link_to image_tag('linkedin.jpg', class: 'custom_image'),'https://www.linkedin.com/in/ChloeBradley1' %>
          <%= link_to image_tag('Github.png', class: 'custom_image'),'https://github.com/ChloeBradley' %>
          <%= link_to image_tag('twitter.png', class: 'custom_image'),'https://twitter.com/ccbradley77' %>
          <%= link_to image_tag('Galvanize.png', class: 'custom_image'),'https://www.galvanize.it' %>
        </div>
      </div>
    </div>
  </div>

</body>
</html>
