<!DOCTYPE html>


<html>
<head>
  <title>gCamp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
   <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
</head>


  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <%= link_to "gCamp", projects_path, class: "navbar-brand" %>
          <ul class="nav navbar-nav">
            <li class="dropdown">
              <%= link_to(raw("Projects" +("<b class= 'caret'></b>")), projects_path, :class => "dropdown-toggle", :data => {:toggle=>"dropdown"}) %>
                <ul class="dropdown-menu" role="menu">
                  <% current_user.memberships.each do |member| %>
                 <li> <%=  link_to "#{member.project.name}", project_path(member.project.id) %></li>
                 <li class="divider"></li>
                 <li> <%= link_to "New Project", new_project_path %></li>
               </ul>
              <% end %>
            </li>
          </ul>

          <ul class="nav navbar-nav">
            <li class="dropdown">
              <%= link_to "Users", users_path %>
            </li>
          </ul>



        <ul class="nav navbar-nav navbar-right">
          <% if current_user %>
             <%= link_to "#{current_user.first_name} #{current_user.last_name}", user_path(current_user), class:"navbar-brand" %></li>
             <li><%= link_to "Sign out", sign_out_path, class:"navbar-brand"%></li>
           <% else %>
             <li><%= link_to "Sign In", sign_in_path, class:"navbar-brand" %></li>
             <li><%= link_to "Sign Up", sign_up_path, class:"navbar-brand" %></li>
           <% end %>
         </ul>
      </div>
    </div>
  </nav>

  <div class= 'container'>

    <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :id => "flash_#{name}", class: "alert alert-#{name}" %>
    <% end %>
  </div>

  <%= yield %>


<footer>
  <div class="container">
    <hr>
    <div class= "row">
      <div class="text-center">
          <%= link_to "Terms", terms_path() %> |
          <%= link_to "About", about_path() %> |
          <%= link_to "FAQ",  faq_path() %>
          <% if current_user %>
          | <%= link_to "Users", users_path() %> |
          <%= link_to "Projects", projects_path() %>
          <% end %>
      </div>

    </div>
  </div>
</footer>



</body>
</html>
