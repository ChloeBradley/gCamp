<div class="padding">
</div>

<div class="container">
  <div class="jumbotron">
    <h1>gCamp</h1>
    <p>your life, organized.</p>
  </div>


  <div class="row">
    <div class="col-md-4">
      <%=image_tag("two.jpg", class: "img-responsive")%>
    </div>

    <div class="col-md-4">
      <%=image_tag("one.jpg", class: "img-responsive")%>
    </div>

    <div class="col-md-4">
      <%=image_tag("three.jpg", class: "img-responsive")%>
    </div>
  </div>

  </br>

  <div class="row">
    <div class="col-md-4">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Tasks</h3>
        </div>
        <div class="panel-body">
          Grouped by projects by lists. Just the way you like em'
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Permissions</h3>
        </div>
        <div class="panel-body">
          Fine-grained permissions
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Title</h3>
        </div>
        <div class="panel-body">
          <ul>
            <li>Comment on tasks and documents</li>
            <li>Get email notifications</li>
          </ul>
        </div>
      </div>
    </div>
  </div><!-- row -->

  <div>
    <% @quote.each do |review| %>
      <p class='quote'> <%= review[0] %></p>
      <p class='text-muted'> <%= review[1] %></p>
    <% end %>
  </div>


</div> <!-- container -->
