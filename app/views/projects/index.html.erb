<div class= 'container'>
  <div class = 'page-header'>
    <%= link_to 'New Project', new_project_path, class: "btn btn-info pull-right" %>
    <h1>Projects</h1>
  </div>


<table class = "table">

      <thead>
        <tr>
          <th><strong> Name </strong></th>
          <th><strong>Task</strong></th>
        </tr>
      </thead>

  <% @projects.each do |project| %>
    <tr>
      <td><%= link_to project.name, project_path(project) %></td>
      <td><%= link_to project.tasks.count, project_tasks_path(project) %></td>
    </tr>
  <% end %>
</table>

<h1>Pivotal Tracker Projects</h1>


<table class = "table">

      <thead>
        <tr>
          <th><strong> Name </strong></th>
        </tr>
      </thead>

  <% @tracker_projects.each do |tproject| %>
    <tr>
      <td> <%= tproject[:name] %> </td>
    </tr>
  <% end %>
</table>


</div>
