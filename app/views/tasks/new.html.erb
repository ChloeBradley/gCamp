<div class='container'>
  <h1>New Task</h1>
  <hr>
  <div class='form-horizontal'>
    <%= link_to 'Task', tasks_path() %> > New Task
    <%= @tasks.description %>
  </div>

  <br>

<%= form_for Task.new do |f| %>
<div class= 'form-group'>
  <div class="col-md-1">
    <%= f.label :name, 'Description', class: "control-label" %>
  </div>

    <div class= "col-md-4">
      <%= f.text_field :description, class: "form-control" %>
  </div>

    <br>
    <br>
      <div class= "form-group">
        <div class= "col-md-offset-1 col-md-11">
      <%= f.submit "Create Task", class: "btn btn-primary" %>
      <%= link_to "cancel", tasks_path, class: "btn btn-default" %>
    </div>

<% end %>

</div>
