

  <div class= 'container'>
    <div class= 'page-header'>
      <h1><% if @task.complete == true %>
        <s><%= @task.description %></s>
      <% else %>
        <%= @task.description %>
      <% end %>
      <div class="pull-right">
        <%= link_to "Edit", edit_project_task_path(params[:project_id], @task), class: "btn btn-info" %>
      </div>
    </h1>
  </div>



        <ol class='breadcrumb'>
          <li><%= link_to 'Projects', projects_path %></li>
          <li><%= link_to @project.name, project_path(@project) %></li>
          <li><%= link_to 'Tasks', project_task_path(@project, @task) %></li>
          <li class="active"><%= @task.description %></li>
        </ol>

        <p>
          <% if @task.due_date %>
          <strong>Due On:</strong>
            <%= @task.due_date.strftime("%m/%d/%Y") %>
          <% end %>
        </p>

  <table>
    <head><h3>Comments</h3></head>
      <% @task.comment.each do |comment| %>
        <div class="col-md-3">
        <tr>
          <div class="col-md-9 pull-right">
          <textarea class="form-control" rows="5"></textarea><br>
            <button type="submit" class="btn btn-primary">Add Comment</button>
          </div>
        </div>
      </div>
      <% end %>



  </table>

</div> <!-- container div-->
