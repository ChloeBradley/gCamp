<%= form_for @task, html: {class: 'form-horizontal'} do |f| %>

  <div class= 'form-group'>
        <% if @task.errors.any? %>
        <div class= 'col-sm-offset-2 col-sm-7'>
          <div class="alert alert-danger">
            <% @task.errors.full_messages.each do |msg| %>
              <h3>prohibited this form from being saved: </h3>
                <li> <%= msg %> </li>
              </ul>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>




  <div class= 'form-group'>
      <%= f.label :description, class: 'col-sm-2 control-label'%>
    <div class= 'col-sm-4'>
      <%= f.text_field :description, class: 'form-control' %>
    </div>
  </div>

  <div class= 'form-group'>
    <%= f.label :due_date, class: 'col-sm-2 control-label'%>
    <div class= 'col-sm-4'>
      <%= f.date_field :due_date, class: 'form-control' %>
    </div>
  </div>

  <% unless @task.new_record? %>
    <div class= 'form-group'>
      <div class= 'col-sm-offset-2 col-sm-10'>
        <div class= 'checkbox'>
          <label>
            <%= f.check_box :complete %> Complete
          </label>
        </div>
      </div>
    </div>
  <% end %>




  <div class= 'form-group'>
    <div class= 'col-sm-offset-2 col-sm-10'>
      <%= f.submit "#{name_of_button} Task", class: 'btn btn-primary' %>
      <%= link_to "Cancel", tasks_path, class: 'btn btn-default' %>
    </div>
  </div>

<% end %>
