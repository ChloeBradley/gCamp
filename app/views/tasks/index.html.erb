<div class = 'container'>

  <div class = 'page-header'>

    <%= link_to 'New Task', new_task_path, class: "btn btn-info pull-right" %>
    <h1>Tasks</h1>
  </div>


  <table class= "table">
    <thead>
      <tr>
        <div class= "col-sm-3">
        <th>Description</th>
        </div>
        <div class= "col-sm-3">
        <th>Due Date</th>
      </div>
      </tr>
    </thead>

  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <td class= "col-sm-3">
        <% if task.complete %>
          <strike><%= link_to task.description, task_path(task) %></strike>
        <% else %>
          <%= link_to task.description, task_path(task) %>
        <% end %>
      </td>

      <td class= "col-sm-3">
          <% if task.due_date %>
          <%= task.due_date.strftime("%m/%d/%Y") %>
          <% end %>
      </td>

      <td>
        <div class="pull-right">
          <%= link_to 'Edit', edit_task_path(task), class: "btn btn-info" %>
          <%= link_to 'Destroy', task_path(task), method: :delete, class: "btn btn-danger" %>
        </div>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
