<div class= 'container'>
  <h1> Edit task </h1>
  <br>
  <ul class='breadcrumb'>
    <li><%= link_to 'Projects', projects_path %></li>
    <li><%= link_to @project.name, project_path(@project) %></li>
    <li><%= link_to 'Tasks', project_tasks_path %></li>
    <li> <%= link_to @task.description, project_task_path %></li>
    <li> Edit </li>
  </ul>

  <p>
    <% if @task.due_date %>
    <strong>Due On:</strong>
      <%= @task.due_date.strftime("%m/%d/%Y") %>
    <% end %>
  </p>

</div>

<%= render partial: "form", locals: { name_of_button: "Update"} %>
