<div class="container">
  <div class= 'page-header'>
    <h1>
      <%= @user.first_name %> <%= @user.last_name %>
        <% if current_user.id == @user.id %>
      <%= link_to 'Edit User', edit_user_path(@user), class:"btn btn-info pull-right" %>
      <% end %>
    </h1>
  </div>

  <dl class="dl-horizontal">
    <dt>First name</dt>
    <dd><%= @user.first_name %></dd>
  </dl>

  <dl class="dl-horizontal">
    <dt>Last name</dt>
    <dd><%= @user.last_name %></dd>
  </dl>

  <% if @user == current_user || current_user.admin || current_user.co_member?(@user) %>
    <dl class="dl-horizontal">
      <dt>Email</dt>
      <dd><a href= "mailto:<%= @user.email %>"><%= @user.email %></a></dd>
    </dl>
  <% end %>

  <% if @user.tracker_token %>
    <dl class="dl-horizontal">
      <dt>Pivotal Tracker Token</dt>
      <dd><%= @disguised_token %></dd>
    </dl>
  <% end %>

</div>
